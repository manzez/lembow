{
  "name": "community-platform",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"pnpm --filter @community/api start:dev\" \"pnpm --filter @community/web dev\"",
    "dev:web": "pnpm --filter @community/web dev",
    "dev:api": "pnpm --filter @community/api start:dev",
    "db:push": "pnpm --filter @community/db prisma db push",
    "db:seed": "pnpm --filter @community/db prisma db seed",
    "build": "pnpm -r run build",
    "lint": "pnpm -r run lint"
  },
  "dependencies": {
    "concurrently": "^9.2.1"
  }
}
